<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!-- 添加依赖声明 -->
   <requires>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.jface"/>
      <import plugin="org.eclipse.swt"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.jdt.core"/>
      <import plugin="org.eclipse.ui.ide"/>
   </requires>

   <extension point="org.eclipse.ui.commands">
      <!-- 生成文件命令 -->
      <command
            id="com.filegenerator.generateFiles"
            name="Batch Generate Files">
      </command>
      
      <!-- 恢复文件命令 -->
      <command
            id="com.filegenerator.restoreFile"
            name="从备份恢复文件">
      </command>
      
      <!-- 批量恢复文件命令 -->
      <command
            id="com.filegenerator.restoreSession"
            name="Batch Restore Files">
      </command>
   </extension>

   <extension point="org.eclipse.ui.handlers">
      <!-- 生成文件处理器 -->
      <handler
            class="com.filegenerator.ui.GenerateFilesHandler"
            commandId="com.filegenerator.generateFiles">
      </handler>
      
      <!-- 恢复文件处理器 -->
      <handler
            class="com.filegenerator.ui.RestoreFileHandler"
            commandId="com.filegenerator.restoreFile">
      </handler>
      
      <!-- 批量恢复文件处理器 -->
      <handler
            class="com.filegenerator.ui.RestoreSessionHandler"
            commandId="com.filegenerator.restoreSession">
      </handler>
   </extension>

   <extension point="org.eclipse.ui.menus">
      <!-- 生成文件菜单项 -->
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="com.filegenerator.generateFiles"
               label="Batch Generate Files"
               style="push">
            <visibleWhen>
               <with variable="selection">
                  <iterate ifEmpty="false" operator="or">
                     <adapt type="org.eclipse.core.resources.IProject">
                        <test property="org.eclipse.core.resources.projectNature" value="org.eclipse.jdt.core.javanature"/>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      
      <!-- 恢复单个文件菜单项 -->
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="com.filegenerator.restoreFile"
               label="从备份恢复文件"
               style="push">
            <visibleWhen>
               <with variable="selection">
                  <iterate ifEmpty="false" operator="or">
                     <or>
                        <instanceof value="org.eclipse.core.resources.IFile"/>
                        <instanceof value="org.eclipse.jdt.core.ICompilationUnit"/>
                     </or>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
      
      <!-- 批量恢复文件菜单项 -->
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="com.filegenerator.restoreSession"
               label="Batch Restore Files"
               style="push">
            <visibleWhen>
               <with variable="selection">
                  <iterate ifEmpty="false" operator="or">
                     <adapt type="org.eclipse.core.resources.IProject">
                        <test property="org.eclipse.core.resources.projectNature" value="org.eclipse.jdt.core.javanature"/>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
    <extension
          point="org.eclipse.ui.commands">
        <!-- 已有命令：Batch Generate Files（示例） -->
        <command
              id="com.filegenerator.batchGenerateFiles"
              name="Batch Generate Files">
        </command>

        <!-- 新增：Apply LLM Patch -->
        <command
              id="com.filegenerator.applyPatch"
              name="Apply LLM Patch">
        </command>
    </extension>

    <extension
          point="org.eclipse.ui.handlers">
        <!-- 已有 handler：Batch Generate Files（示例） -->
        <handler
              class="com.filegenerator.ui.GenerateFilesHandler"
              commandId="com.filegenerator.batchGenerateFiles">
        </handler>

        <!-- 新增 handler：Apply LLM Patch -->
        <handler
              class="com.filegenerator.ui.ApplyPatchHandler"
              commandId="com.filegenerator.applyPatch">
        </handler>
    </extension>

    <extension
          point="org.eclipse.ui.menus">
        <!-- 右键项目弹出菜单 -->
        <menuContribution
              allPopups="false"
              locationURI="popup:org.eclipse.ui.popup.any?after=additions">
            <menu
                  id="com.filegenerator.menu"
                  label="File Generator">
                <!-- 原有菜单项：Batch Generate Files（示例） -->
                <command
                      commandId="com.filegenerator.batchGenerateFiles"
                      id="com.filegenerator.menu.batchGenerateFiles"
                      label="Batch Generate Files"
                      style="push">
                </command>

                <!-- 新增菜单项：Apply LLM Patch -->
                <command
                      commandId="com.filegenerator.applyPatch"
                      id="com.filegenerator.menu.applyPatch"
                      label="Apply LLM Patch"
                      style="push">
                </command>
            </menu>
        </menuContribution>
    </extension>
</plugin>
